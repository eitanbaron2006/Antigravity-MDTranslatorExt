{
    "name": "aion",
    "displayName": "Aion",
    "description": "Modern AI Coding Agent for professional development. Full-scale automation and intelligent assistance.",
    "version": "1.5.0",
    "icon": "resources/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/EitanBaron/Antigravity-MDTranslatorExt"
    },
    "publisher": "EitanBaron",
    "engines": {
        "vscode": "^1.95.0"
    },
    "activationEvents": [
        "onLanguage:markdown",
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "aion.newChat",
                "title": "New Chat",
                "icon": "$(add)"
            },
            {
                "command": "aion.openLibrary",
                "title": "Library",
                "icon": "$(library)"
            },
            {
                "command": "aion.showHistory",
                "title": "History",
                "icon": "$(history)"
            },
            {
                "command": "aion.showSettings",
                "title": "Settings",
                "icon": "$(settings-gear)"
            },
            {
                "command": "aion.showPreview",
                "title": "Translate",
                "icon": "$(symbol-method)"
            },
            {
                "command": "aion.devAnalysis",
                "title": "Dev Recommendations",
                "icon": "$(lightbulb)"
            },
            {
                "command": "aion.devCreate",
                "title": "Dev Create",
                "icon": "$(repo-create)"
            },
            {
                "command": "aion.devUpgrade",
                "title": "Dev Upgrade",
                "icon": "$(zap)"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Aion",
            "properties": {
                "aion.language": {
                    "type": "string",
                    "enum": [
                        "en",
                        "he"
                    ],
                    "default": "en",
                    "enumDescriptions": [
                        "English",
                        "עברית (Hebrew - with RTL support)"
                    ],
                    "description": "Language for translation and UI elements",
                    "order": 1
                },
                "aion.summaryLength": {
                    "type": "string",
                    "default": "medium",
                    "description": "Length of the summary: short, medium, or long.",
                    "order": 3
                },
                "aion.aiProvider": {
                    "type": "string",
                    "enum": [
                        "Gemini",
                        "OpenAI",
                        "Anthropic",
                        "DeepSeek",
                        "Custom"
                    ],
                    "default": "Gemini",
                    "description": "Select the AI provider for translation and analysis.",
                    "order": 4
                },
                "aion.aiModel": {
                    "type": "string",
                    "default": "",
                    "description": "Model name (e.g., 'gpt-4o', 'claude-3-5-sonnet', 'grok-code-fast-1'). Leave empty to use provider default.",
                    "order": 5
                },
                "aion.customUrl": {
                    "type": "string",
                    "default": "",
                    "description": "Base URL for Custom provider (e.g., 'https://api.openai.com/v1'). Required if provider is Custom.",
                    "order": 6
                },
                "aion.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for the selected AI provider.",
                    "order": 7
                },
                "aion.ignoreListActive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable reading patterns from ignore files.",
                    "order": 8
                },
                "aion.ignoreFiles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".gitignore",
                        ".vscodeignore",
                        ".linecounterignore"
                    ],
                    "description": "List of files to read ignore patterns from (e.g., .gitignore).",
                    "order": 9
                },
                "aion.whitelistActive": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable/Disable whitelist mode. Only files matching patterns in the included files will be translatable.",
                    "order": 10
                },
                "aion.includeFiles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".linecounterinclude"
                    ],
                    "description": "List of files to read Whitelist (Include) patterns from.",
                    "order": 11
                },
                "aion.devAnalysisIncludeFiles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "*.ts",
                        "*.js",
                        "*.py",
                        "*.tsx",
                        "*.jsx"
                    ],
                    "description": "Whitelist patterns for Development Recommendations.",
                    "order": 12
                },
                "aion.devCreateIncludeFiles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "*.prompt",
                        "*.txt",
                        "*.md"
                    ],
                    "description": "Whitelist patterns for AI Code Generation (Dev Create).",
                    "order": 13
                },
                "aion.devLang": {
                    "type": "string",
                    "enum": [
                        "python",
                        "nextjs",
                        "react vite",
                        "html+js+css",
                        "vanilla js",
                        "tailwind",
                        "typescript",
                        "csharp",
                        "go"
                    ],
                    "default": "vanilla js",
                    "description": "Target language/framework for development analysis and creation.",
                    "order": 14
                },
                "aion.devCreatePath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path or folder name where Dev Create files should be saved (absolute or relative to workspace).",
                    "order": 15
                },
                "aion.devSystemPrompt": {
                    "type": "string",
                    "default": "",
                    "edit:multiline": true,
                    "description": "Global instructions sent to AI for every Dev Create or Dev Upgrade request.",
                    "order": 16
                },
                "aion.useProjectSkills": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically include project-specific skills (from .agent/skills) in AI prompts.",
                    "order": 17
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "aion-sidebar",
                    "title": "Aion",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "views": {
            "aion-sidebar": [
                {
                    "type": "webview",
                    "id": "aion-chat",
                    "name": "Aion",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "aion-sidebar",
                    "title": "Aion",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "views": {
            "aion-sidebar": [
                {
                    "type": "webview",
                    "id": "aion-chat",
                    "name": "Aion",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "aion.newChat",
                    "when": "view == aion-chat",
                    "group": "navigation@1"
                },
                {
                    "command": "aion.openLibrary",
                    "when": "view == aion-chat",
                    "group": "navigation@2"
                },
                {
                    "command": "aion.showHistory",
                    "when": "view == aion-chat",
                    "group": "navigation@3"
                },
                {
                    "command": "aion.showSettings",
                    "when": "view == aion-chat",
                    "group": "navigation@4"
                }
            ],
            "editor/title": [
                {
                    "command": "aion.showPreview",
                    "group": "navigation",
                    "when": "aion.isTranslateFile"
                },
                {
                    "command": "aion.devAnalysis",
                    "group": "navigation",
                    "when": "aion.isDevFile"
                },
                {
                    "command": "aion.devCreate",
                    "group": "navigation",
                    "when": "aion.isCreateFile"
                },
                {
                    "command": "aion.devUpgrade",
                    "group": "navigation",
                    "when": "aion.isDevFile"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/node-fetch": "^2.6.13",
        "@types/vscode": "^1.95.0",
        "@vscode/vsce": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {}
}